/* pages/components/menu.wxss */
@import '../../../style/iconfont/iconfont.wxss';
.img-plus-style {
    background: rgba(0, 180, 170, 1);
    padding: 18rpx;
    position: absolute;
    bottom: 0rpx;
    right: 0rpx;
    z-index: 100;
    font-size: 0;
    border-radius: 50%;
    -moz-box-shadow:0px 0px 10px #c7d4d4; -webkit-box-shadow:0px 0px 10px #c7d4d4; box-shadow:0px 0px 10px #c7d4d4;
  }
  .img-plus-style .im{
    height: 60rpx;
    width: 60rpx;
  }
  .img-style {
    height: 80rpx;
    width: 80rpx;
    
  }
  
  .container {
    /* width: 100%; */
    position: absolute;
    left: 0;
    top: 0;
    /* min-height: 100%; */
  }
  
  .drag {
    position: fixed;
    z-index: 10;
    height: 150rpx;
    width: 150rpx;
    /* cursor: move; */
  }
  .release-btn {
    position: absolute;
    bottom: 0rpx;
    right: 0rpx;
    opacity: 0;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(0, 180, 170, 0.5);
    border-radius: 50%;
}

.release-btn .iconfont {
    color: #fff;
    font-size: 40rpx;
   
}