/* miniprogram/pages/index/audio.wxss */

page {
    background: #f3f3f3;
}
.audio{
    width: 70rpx;
    height: 70rpx;
    vertical-align: middle;
    margin: auto;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
   
}
.start-audio .show{
    position: relative;
    /* bottom: 250rpx; */
    background:rgba(0, 180, 170,1);
    /* position: fixed; */
    /* padding: 40rpx 0rpx 40rpx 0rpx; */
    /* left: 30rpx; */
    /* right: 30rpx; */
    height: 157rpx;
    width: 157rpx;
    border-radius: 50%;
    margin: auto;
    text-align: center;

}
.no-audio{
    background: #ffffff;
    padding: 20rpx;
    height: 200rpx;
    color: #999;
}
.start-audio{
    height: 200rpx;
background: #fff;
margin-top: 10rpx;
padding: 50rpx;

}
.turn{
    text-align: center;
    padding: 10rpx;
    color: #999;
}
.bg{
    position: absolute;
    top: 0;
    height: 100%;
    width: 100%;
    background: rgba(0, 0, 0, 0.5)

}
.stop-box{
    position: relative;
    position: absolute;
    width: 100%;
    height: 300rpx;
    background: #fff;
}
.upanimate{
    animation: myfirst .3s linear;
    position: absolute;
    width: 100%;
    height: 300rpx;
    background: #fff;
    bottom: 0;
}
@keyframes myfirst
{
from {bottom: -200rpx;}

to {bottom: 0;}
}
.bor{
    position: relative;
    width: 200rpx;
    height: 200rpx;
    border:1px solid rgb(207, 207, 207);
    font-weight: 100;
    border-radius: 50%;
    position: absolute;
    margin: auto;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;

}
.blue{
    position: absolute;
    height: 100rpx;
    width: 100rpx;
    margin: auto;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: rgb(86, 186, 245);
    border-radius: 10rpx;
}
.onesound{
    position: relative;
    width: 40%;
    height: 67rpx;
    border-radius: 25px;
    background: rgba(0, 180, 170,1);
}
.sound{
position: absolute;
height: 50rpx;
left: 20rpx;
width: 50rpx;
margin: auto;
top: 0;
bottom: 0;

}